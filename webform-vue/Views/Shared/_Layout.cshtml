<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - WebApplication</title>
  <link rel="stylesheet" href="~/Content/site.css" />
  <link rel="stylesheet" href="~/Content/bootstrap/bootstrap.css" />
  <link rel="stylesheet" href="~/Content/bootstrap/bootstrap-theme.css" />
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      @Html.ActionLink("webform_vue", "Index", "Home", null, new { @class = "navbar-brand" })
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
	    <li><a href="/application/VuePage.aspx?c=control">Vue.js Example</a></li>
	    <li><a href="/application/VuePage.aspx?c=pd">Preview Detail Example</a></li>
	    <li><a href="/application/VuePage.aspx?c=select">Async Select</a></li>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
      </ul>
    </div>
  </div>
</div>
<div class="container body-content">
  @RenderBody()
  <hr />
  <footer>
    <p>&copy; 2016 - webform_vue</p>
  </footer>
</div>

<environment names="Development">
  <script src="~/Content/jQuery/jquery-3.3.1.js"></script>
  <script src="~/Content/bootstrap/bootstrap.js"></script>
  <script src="~/Content/site.js" ></script>
</environment>

@RenderSection("scripts", required: false)
</body>
</html>
